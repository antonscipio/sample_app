<%# form to sign up new users, uses scss %>

<% provide(:title, 'Sign up') %> 
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%# this line is to render a error message (we had to create a shared directory then error_messages file in the apps/view %>
      <%= render 'shared/error_messages' %>
    
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
  
      <%= f.label :password %>
      <%= f.text_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.text_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
